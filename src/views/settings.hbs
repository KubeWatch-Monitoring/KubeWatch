{{#section 'title'}}
    Settings
{{/section}}
{{#section 'stylesheets'}}
{{/section}}
{{#section 'scripts'}}
{{/section}}
<div class="row">
    <form action="/settings" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="value">Value</label>
            <input type="text" name="value" id="value" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Create user</button>
    </form>
</div>
<div class="row">
    <h3>Update</h3>
    <form action="/settings" method="POST">
        {{#each settings}}
            <div class="form-group">
                <label for="name[{{this.name}}]">{{this.name}}</label>
                <input type="text" name="name[{{this.name}}]" id="name[{{this.name}}]" class="form-control" value="{{this.value}}">
            </div>
        {{/each}}
        <button type="submit" class="btn btn-primary">Create user</button>
    </form>
</div>
