{{#section 'title'}}
    Pod List
{{/section}}
{{#section 'stylesheets'}}
{{/section}}
{{#section 'scripts'}}
    <script type="module" src="js/listPods.js"></script>
{{/section}}

<button class="btn btn-collapse-all">Collapse All</button>
<div class="row">
    {{#each pods}}
        <div class="accordion-body">
            <div class="card pod" data-pod-id="{{this.id}}">
                <div class="card-header">
                    Pod {{@index}}: {{this.name}}
                </div>
                <div class="card-body">
                    <div class="collapsable">
                        <table class="table">
                            <tr>
                                <th scope="row">Image</th>
                                <td>{{this.image}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Health</th>
                                <td>{{this.health}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Total CPU Usage (seconds)</th>
                                <td>{{this.metrics.cpu}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Total Memory Usage (MiB)</th>
                                <td>{{this.metrics.memory}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Total Disk Usage (KiB)</th>
                                <td>{{this.metrics.disk}}</td>
                            </tr>
                        </table>
                    </div>
                    <a href="/pods/{{this.id}}" class="btn">Go to Pod Information</a>
                    <button class="btn btn-collapse">Collapse</button>
                </div>
            </div>
        </div>
    {{/each}}
</div>